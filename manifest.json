{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0.0",
  "description": "__MSG_extDescription__",
  "homepage_url": "https://tekky.cc/",
  "default_locale": "en",
  "icons": {
    "16": "icons/icon16.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://www.youtube.com/api/*",
    "https://www.youtube.com/youtubei/*",
    "https://www.youtube.com/get_video_info*",
    "https://*/*",
    "http://*/*"
  ],
  "options_page": "options.html",
  "action": {
    "default_icon": {
      "48": "logo.png",
      "128": "logo.png"
    },
    "default_title": "Summarize this page"
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["logo.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
